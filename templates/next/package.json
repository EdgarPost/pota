{
  "name": "@pota/next-template",
  "version": "1.0.0-alpha.1",
  "bugs": {
    "url": "https://github.com/mediamonks/pota/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mediamonks/pota.git",
    "directory": "templates/next"
  },
  "license": "MIT",
  "author": "frontend.monks",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "preview": "next start",
    "typecheck": "tsc --project tsconfig.json --noEmit --noUnusedLocals",
    "prepare": "husky install",
    "plop": "node --loader ts-node/esm ./scripts/plop.ts",
    "fix": "run-s fix:* && npm run format",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,scss,md,json}\" --write --loglevel warn",
    "lint": "run-s lint:*",
    "lint:eslint": "next lint --cache-location node_modules/.cache/.eslintcache",
    "rsync": "cross-env rsync -avPx .next/* ${npm_package_name}@${npm_package_config_host}:~/public/ --delete"
  },
  "config": {
    "host": "TODO: Add a host name."
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 11, not ie_mob <= 11",
    "not dead"
  ],
  "prettier": "@mediamonks/prettier-config",
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@mediamonks/eslint-config-react",
      "plugin:@next/next/recommended"
    ]
  },
  "dependencies": {
    "next": "~12.1.5",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "styled-components": "^5.3.5",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@mediamonks/eslint-config-react": "^2.0.0",
    "@mediamonks/prettier-config": "^1.0.0",
    "@next/eslint-plugin-next": "^12.1.5",
    "@types/minimist": "^1.2.2",
    "@types/node": "17.0.27",
    "@types/react": "18.0.7",
    "@types/react-dom": "18.0.0",
    "@types/styled-components": "^5.1.25",
    "cross-env": "^7.0.3",
    "eslint": "8.14.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "npm-run-all": "^4.1.5",
    "plop": "^3.1.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.7.0",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7",
    "yarn": "unsupported"
  }
}
