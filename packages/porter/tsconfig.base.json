{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "module": "CommonJS",

    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  }
}
