{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "module": "CommonJS",

    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["porter.ts"],
  "exclude": ["node_modules", "src"]
}
